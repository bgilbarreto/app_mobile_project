<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="358dp"
        android:layout_height="226dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/msgtext1"
            android:gravity="center"
            android:text="Queremos conocer tu opinion sobre nosotros"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="56dp"
            android:background="@drawable/msgtext2"
            android:gravity="center"
            android:text="Â¿Como calificarias nuestro servicio?"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="364dp"
        android:layout_height="83dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="328dp"
            android:text="@string/bueno"
            android:textSize="23sp" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="328dp"
            android:text="@string/regular"
            android:textSize="23sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="361dp"
        android:layout_height="171dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="123dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/msgtext3"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text=" Ayudanos a mejorar" />
    </LinearLayout>

    <Button
        android:id="@+id/Enviar"
        android:layout_width="129dp"
        android:layout_height="55dp"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_back"
        android:gravity="center"
        android:onClick="onCreate"
        android:text="@string/enviar"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        app:layout_constraintVertical_bias="0.325" />

</androidx.constraintlayout.widget.ConstraintLayout>